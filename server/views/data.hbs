<script src="./export.js"></script>

<head>
  <style>
    table,
    th,
    td {
      padding: 10px;
      border: 1px solid black;
      border-collapse: collapse;
    }

    input,
    label,
    form {
      display: inline;
    }
  </style>
</head>

<body>
  <div class="col-sm-10">
    <h2>Data:</h2>
    <div>
      <table>
        <tr>
          <td>
            <div>
              <form action="" method="get">
                <label for="hourText">Show specific hour:</label><br>
                <input type="text" id="hour" name="hour" maxlength="2"><br>
                <input type="submit" value="Submit" id="submitBtn" />
              </form>
              <form id="clearForm" action="" method="get">
                <input type="submit" value="Clear" id="clearBtn" />
              </form>
            </div>
          </td>

          <td>
            <form action="" method="get">
              <input type="radio" id="hourly" name="timespan" value="hourly">
              <label for="hourly">Hourly</label><br>
              <input type="radio" id="daily" name="timespan" value="daily">
              <label for="daily">Daily</label><br>
              <input type="submit" value="Submit" id="submitBtn" />
            </form>
            <form id="clearForm" action="" method="get">
              <input type="submit" value="Clear" id="clearBtn" />
            </form>
          </td>

          <td>
            <form>
              <input type="button" value="Hello" id="btn">
            </form>
          </td>
        </tr>
      </table>
    </div>

    <table id="dataTable">
      <thead>
        <tr>
          {{#each keys}}
          <th><a href="/db/{{../dbName}}/tables/{{../tableName}}/data/{{this}}"><span
                style="text-transform:uppercase">{{this}}</span></a></th>
          {{/each}}
        </tr>
      </thead>
      <tbody>
        {{#each dataList}}
        <tr>
          {{#each ../keys}}
          <td>{{lookup .. this}}</td>
          {{/each}}
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  {{!-- <div class="pagination">
    <button id="prevButton">Previous</button>
    <button id="nextButton">Next</button>
  </div> --}}
</body>